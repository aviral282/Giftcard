{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
    		      "@auth/*": ["src/auth/*"],
              "@category/*": ["src/category/*"],
              "@question/*": ["src/question/*"],
    		      "@score/*": ["src/score/*"],
            	"@user/*": ["src/user/*"],
              "@userMgmt/*": ["src/user-management/*"],
            	"@util/*": ["src/util/*"]
            }
  }
}
